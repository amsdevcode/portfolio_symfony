{% extends 'base.html.twig' %}

{% block title %}accueil{% endblock %}

{% block body %}

<header id="home-header">
    <div id="header-img"></div>
    <h1>Amandine Bensekhri</h1>
    <h2>Développeuse web et web mobile</h2>
</header>

<main class="container-fluid p-5">

    <div class="row" id="projets">
        <div class="col-12">
            <h2>Projets</h2>
        </div>
    </div>

    <div class="row">
        {% for projet in projets %}
            {% if loop.index <= 6 %}
                <div class="col-4 p-3">
                    <div class="card">
                        <img class="card-img-top" src="{{ asset('img/projet/' ~ projet.img1) }}" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">{{ projet.name }}</h5>
                            <p class="card-text">{{ projet.description|u.truncate(90, '...') }}</p>
                        </div>
                        <div class="card-body text-center">
                            <a href="#" class="btn btn-outline-secondary">Voir le site</a>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>

    <div id="skills" class="container-fluid">

        <div class="row" id="skill">

            <div class="col-12 my-auto">
                <h2 class="p-5">Compétences</h2>
            </div>

            <div class="col-sm-10 offset-sm-1 col-md-6 offset-md-0 col-lg-4 p-5">
                <h3 class="pb-3">Technologies</h3>
                <div class="dropdown-divider"></div>
                    <p data-aos="fade-up"><img class="img-skills" src="img/logo-html.png" alt="logo HTML"> - HTML</p>
                    <p data-aos="fade-up"><img class="img-skills" src="img/logo-css.png" alt="logo CSS"> - CSS</p>
                    <p data-aos="fade-up"><img class="img-skills" src="img/logo-php.png" alt="logo PHP"> - PHP</p>
                    <p data-aos="fade-up"><img class="img-skills" src="img/logo-javascript.png" alt="logo JavaScript"> - JavaScript</p>
                                        <p data-aos="fade-up"><img class="img-skills" src="img/logo-mysql.png" alt="logo MySQL"> - MySQL</p>
                                </div>

            <div class="col-sm-10 offset-sm-1 col-md-6 offset-md-0 col-lg-4 p-5">
                <h3 class="pb-3">Frameworks / bibliothèques</h3>
                <div class="dropdown-divider"></div>
                    <p data-aos="fade-up"><img class="img-skills" src="img/logo-symfony.png" alt="logo Symfony"> - Symfony</p>
                    <p data-aos="fade-up"><img class="img-skills" src="img/logo-bootstrap.png" alt="logo Bootstrap"> - Bootstrap</p>
                    <p data-aos="fade-up"><img class="img-skills" src="img/logo-fontawesome.png" alt="logo FontAwesome"> - FontAwesome</p>
                    <p data-aos="fade-up"><img class="img-skills" src="img/logo-twig.png" alt="logo Twig"> - Twig</p>
                                </div>

            <div class="col-sm-10 offset-sm-1 col-md-6 offset-md-3 col-lg-4 offset-lg-0 p-5">
                <h3 class="pb-3">CMS</h3>
                <div class="dropdown-divider"></div>
                                        <p data-aos="fade-up"><img class="img-skills" src="img/logo-prestashop.png" alt="logo PrestaShop"> - PrestaShop</p>
                                        <p data-aos="fade-up"><img class="img-skills" src="img/logo-wordpress.png" alt="logo WordPress"> - WordPress</p>
                                </div>

        </div>

    </div>

    <div id="about" class="container-fluid">

        <h2 class="p-5">À propos</h2>

        <div class="row p-5">
            <div class="col-md-8 offset-md-2 text-justify">
                <p>Lorem ipsum dolor sit, amet consectetur adipisicing elit. Praesentium expedita iste tenetur dolore? Et ipsa debitis dicta aperiam, a, non consectetur perferendis exercitationem architecto sunt delectus necessitatibus, suscipit possimus ex.</p>
            </div>
            <div class="col-12 text-center">
                <a class="btn btn-outline-secondary" href="{{ asset('doc/') }}cv-amandine-bensekhri.pdf" target="blank" role="button">Voir mon CV</a>
            </div>
        </div>
    </div>

    <div id="contact" class="container-fluid">

        <h2 class="p-5">Contact</h2>

        <div class="row">
            
            <div class="col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-6 offset-lg-3 p-5">
                <h3>Formulaire de contact</h3>
                <div class="dropdown-divider"></div>
                <form name="contact" method="post">
                    <div class="row">
                        <div class="col-md-3 my-auto">
                            <p data-aos="fade-up"><label for="contact_nom" class="required">Nom</label></p>
                        </div>
                        <div class="col-md-9">
                            <p data-aos="fade-up"><input type="text" id="contact_nom" name="contact[nom]" required="required" class="form-control" /></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3 my-auto">
                            <p data-aos="fade-up"><label for="contact_prenom" class="required">Prénom</label></p>
                        </div>
                        <div class="col-md-9">
                            <p data-aos="fade-up"><input type="text" id="contact_prenom" name="contact[prenom]" required="required" class="form-control" /></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3 my-auto">
                            <p data-aos="fade-up"><label for="contact_email" class="required">Email</label></p>
                        </div>
                        <div class="col-md-9">
                            <p data-aos="fade-up"><input type="email" id="contact_email" name="contact[email]" required="required" class="form-control" /></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3 my-auto">
                            <p data-aos="fade-up"><label for="contact_objet" class="required">Objet</label></p>
                        </div>
                        <div class="col-md-9">
                            <p data-aos="fade-up"><input type="text" id="contact_objet" name="contact[objet]" required="required" class="form-control" /></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3 my-auto">
                            <p data-aos="fade-up"><label for="contact_message" class="required">Message</label></p>
                        </div>
                        <div class="col-md-9">
                            <p data-aos="fade-up"><textarea id="contact_message" name="contact[message]" required="required" class="form-control"></textarea></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 text-center">
                            <p data-aos="fade-up"><button type="submit" id="contact_envoyer" name="contact[envoyer]" class="btn-outline-secondary btn">Envoyer</button></p>
                        </div>
                    </div>
                <input type="hidden" id="contact__token" name="contact[_token]" value="XE18wC5qtmvCsrW-LcQHyv-vqcGmMbsX0UFJ_8C2g1Y" /></form>
            </div>
            
        </div>

    </div>

</div>


</main>
{% endblock %}
